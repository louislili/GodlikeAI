{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Multi-Intent Workflow",
  "type": "object",
  "required": ["nodes"],
  "properties": {
    "workflowId": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "source": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nodeId": { "type": "string" },
          "name": { "type": "string" },
          "flowNodeType": { "type": "string" },
          "inputs": { "type": "array" },
          "outputs": { "type": "array" },
          "position": { "type": "object" },
          "version": { "type": "string" }
        },
        "required": ["nodeId", "flowNodeType"]
      }
    }
  },
  "additionalProperties": true
}